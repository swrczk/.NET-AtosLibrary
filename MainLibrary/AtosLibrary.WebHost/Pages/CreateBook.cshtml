@page
@model AtosLibrary.WebHost.CreateBookModel
@{
    ViewData["Title"] = "CreateBook";
}

<h1>CreateBook</h1>

<form method="post">
    <div class="form-row">
        <div class="form-group col-md-10">
            <label>Name</label>
            <input type="text" class="form-control" placeholder="Name" asp-for="BookModel.Name">
            <span asp-validation-for="BookModel.Name"></span>
        </div>
        <div class="form-group col-md-2">
            <label>Number</label>
            <input type="number" class="form-control" placeholder="Number" asp-for="BookModel.Number">
            <span asp-validation-for="BookModel.Number"></span>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-12">
            <label>Description</label>
            <textarea type="text" class="form-control" placeholder="Description" asp-for="BookModel.Description"></textarea>
            <span asp-validation-for="BookModel.Description"></span>
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Create Book</button>
</form>

